
<div class="container text-center">
  <h2>Thi is your cocktail details</h2>
  <p>
    <strong>Name:</strong>
    <%= @cocktail.name %>
  </p>

  <p>
   <strong>Ingredients:</strong>
   <ul class="list-unstyled">
     <% @cocktail.doses.each do |doses| %>
     <li class = "list-unstyled"><%= doses.description %> of <%= doses.ingredient.name %></li>
     <%= link_to "Delete dose", dose_path(doses), method: :delete, data: {cnofrim: "are you sure bro?"} %>
     <% end %>
     <li><% if @cocktail.photo? %>
     <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
      <% end %></li>
    </ul>
  </p>


  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %> |

  <%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
  <%= link_to 'Delete', cocktail_path(@cocktail) %> |
  <%= link_to 'Back', cocktails_path %>

</div>
